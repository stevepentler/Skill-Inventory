.row
  .col.s6
    %img{ :id => "napoleon_dynamite", :src => "/images/Napoleon.jpg"}
    %img{ :id => "kip", :src => "/images/Kip.jpg"}
  .col.s6 
    %h1 SWEET COMPUTER SKILLS
    %a.waves-effect.waves-light.btn-large.co{:id => "add_skills", :href=> "/skills/new"}Add Your Own Skills
    -@skills.each do |skill|
      %h3 
        =skill.name
      %a{:href => "/skills/#{skill.id}"} 
      %h4
        =skill.status
      %a.edit.waves-effect.waves-light.btn-large{:href => "/skills/#{skill.id}/edit", :value => "edit"}edit
      %form{ :action => "/skills/#{skill.id}", :method => "post"}
        %input{ :name => "_method", :type => "hidden", :value => "delete"}
          %input.delete.waves-effect.waves-light.btn-large{:type => "submit", :value => "delete"}